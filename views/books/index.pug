extends ../layout

block content
  h2= title
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      if books.length
        each book in books
          tr
            td
              a(href="/books/" + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.year
      else
        tr
          td(colspan="4") No books found.